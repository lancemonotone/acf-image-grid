      "name": "grid_settings",
      "type": "group",
      "layout": "block",
      "sub_fields": [
        {
          "key": "field_gap_size",
          "label": "Gap Size",
          "name": "gap_size",
          "type": "select",
          "choices": {
            "small": "Small (10px)",
            "medium": "Medium (20px)",
            "large": "Large (30px)"
          },
          "default_value": "medium"
        }
      ]
    },
    {
      "key": "field_slideshow_images",
      "label": "Slideshow Images (Slot 1)",
      "name": "slideshow_images",
