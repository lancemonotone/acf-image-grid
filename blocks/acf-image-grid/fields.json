        {
          "key": "field_transition_type",
          "label": "Transition Type",
          "name": "transition",
          "type": "select",
          "choices": {
            "fade": "Fade",
            "slide": "Slide",
            "slide-vertical": "Slide Vertical"
          },
          "default_value": "fade"
        },
        {
          "key": "field_autoplay_enabled",
          "label": "Enable Autoplay",
          "name": "autoplay_enabled",
          "type": "true_false",
          "default_value": 1
        },
        {
          "key": "field_autoplay_duration",
          "label": "Autoplay Duration (seconds)",
          "name": "autoplay_duration",
          "type": "number",
          "min": 2,
          "max": 10,
          "default_value": 5,
          "conditional_logic": [
            [
              {
                "field": "field_autoplay_enabled",
                "operator": "==",
                "value": "1"
              }
            ]
          ]
        },
        {
          "key": "field_show_dots",
          "label": "Show Navigation Dots",
          "name": "show_dots",
          "type": "true_false",
          "default_value": 1
        },
        {
          "key": "field_show_arrows",
          "label": "Show Navigation Arrows",
          "name": "show_arrows",
          "type": "true_false",
          "default_value": 1
        },
        {
          "key": "field_show_counter",
